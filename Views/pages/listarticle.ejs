<% include index.ejs %>

<div class="container">
    <div class="row">
        <div class="search">
            <form method="post" action="/admin/article/search">
            <input type="text" class="form-control input-sm"  placeholder="Search" name="Search"/>
            <button type="submit" class="btn btn-primary btn-sm">Search</button>
            </form>
        </div>
    </div>
</div>


<div class="container">
        <div class="esconde" id="opdRetro">
            <table class="table table-striped table-hover ">
                <thead>
                <tr class="bg-primary">
                    <th>Titre</th>
                    <th>Auteur</th>
                    <th>Chapeau </th>
                    <th>Supprimer</th>
                    <th>Editr</th>
                </tr>
                </thead>
                <tbody>

                <tr>
                    <% articles.forEach(function(article) { %>
                    <td> <%=article.titre %> </td>
                    <td> <%=article.auteur %> </td>
                    <td>  <%=article.chapeau %>  </td>
                    <td>  <a href="/admin/article/delete/<%=article._id%>">supprimer</a> </td>
                    <td> <a href="/admin/article/findOne/<%=article._id%>">Edit</a> </td>

                </tr>

                <% });%>
                </tbody>
            </table>
            </div>
        </div>
        </body>
        </html>



