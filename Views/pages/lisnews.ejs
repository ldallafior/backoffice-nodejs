<% include index.ejs %>`

<div class="container">
    <div class="row">
        <div class="search">
            <form method="post" action="/admin//news/search">
                <input type="text" class="form-control input-sm"  placeholder="Search" name="Search"/>
                <button type="submit" class="btn btn-primary btn-sm">Search</button>
            </form>
        </div>
    </div>
</div>

<div class="container">
    <div class="esconde" id="opdRetro">
        <table class="table table-striped table-hover ">
            <thead>
            <tr class="bg-primary">
                <th>Titre</th>
                <th>datecreation </th>
                <th>Supprimer</th>
                <th>Editr</th>
            </tr>
            </thead>
            <tbody>

            <tr>
                <% news.forEach(function(news) { %>
                <td> <%=news.titre %> </td>
                <td>  <%=news.datecreation %>  </td>
                <td>  <a href="/admin/news/delete/<%=news._id%>">supprimer</a> </td>
                <td> <a href="/admin//news/findOne/<%=news._id%>">Edit</a> </td>

            </tr>

            <% });%>
            </tbody>
        </table>
    </div>
</div>
</body>
</html>
